# Application Settings
APP_NAME=RAG Course Chatbot
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Vector Store Configuration (Choose one)
VECTOR_STORE=pinecone  # Options: pinecone, chroma

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=course-chatbot

# Chroma Configuration (Alternative)
CHROMA_PERSIST_DIRECTORY=./data/chroma_db

# LLM Configuration
LLM_MODEL=meta-llama/Llama-3-8B-Instruct  # Options: meta-llama/Llama-3-8B-Instruct, meta-llama/Llama-3-70B-Instruct
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=512
LLM_TOP_P=0.9

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# HuggingFace (for model downloads)
HUGGINGFACE_TOKEN=your-huggingface-token

# Document Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_DOCUMENTS=1000

# RAG Configuration
RETRIEVAL_TOP_K=5
SIMILARITY_THRESHOLD=0.7

# Redis Cache (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Security
API_KEY_ENABLED=False
API_KEY=your-secret-api-key
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=[".pdf",".docx",".txt",".md"]

# Data Directories
DATA_DIR=./data
DOCUMENTS_DIR=./data/documents
UPLOADS_DIR=./data/uploads
